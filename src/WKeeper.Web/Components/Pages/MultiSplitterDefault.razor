    </FluentMultiSplitterPane>
    <FluentMultiSplitterPane Size="70%">
        <FluentMultiSplitter OnResize="@OnResizeHandler" OnExpand="@OnCollapseExpand" OnCollapse="@OnCollapseExpand" Orientation="Orientation.Vertical">
