            <FluentAnchor Style="margin: 5px;" Href="/workspace" Match="NavLinkMatch.All" IconStart="@(new Icons.Regular.Size20.PlugConnectedSettings())">Providers</FluentAnchor>


    </FluentMultiSplitterPane>
</FluentMultiSplitter>

