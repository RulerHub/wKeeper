                            Some text
                        </FluentCard>
                    </FluentGridItem>

                    <FluentGridItem>
                        <FluentCard Style="margin: 10px;" Width="125px" Height="125px">
                            Some text
                        </FluentCard>
                    </FluentGridItem>

                    <FluentGridItem>
                        <FluentCard Style="margin: 10px;" Width="125px" Height="125px">
                            Some text
                        </FluentCard>
                    </FluentGridItem>

                </FluentGrid>
            </FluentMultiSplitterPane>
            <FluentMultiSplitterPane Collapsible="true" Size="20%">

                Console log

            </FluentMultiSplitterPane>
        </FluentMultiSplitter>
    </FluentMultiSplitterPane>
    <FluentMultiSplitterPane Size="15%" Min="50px" Max="70%">

            <FluentAnchor Style="margin: 5px;" Href="/workspace" Match="NavLinkMatch.All" IconStart="@(new Icons.Regular.Size20.Home())">Home</FluentAnchor>
            <FluentAnchor Style="margin: 5px;" Href="/workspace" Match="NavLinkMatch.All" IconStart="@(new Icons.Regular.Size20.PlugConnectedSettings())">Report</FluentAnchor>
